pkgname='mlmmj'
pkgver=1.2.18.1
pkgrel=1
pkgdesc='Mailing-list manager'
arch=('i686' 'x86_64')
url='http://mlmmj.org/'
license=('GPL')
source=("http://mlmmj.org/releases/$pkgname-$pkgver.tar.gz")
md5sums=('97d9c4d79d388728a1c3926b18c0a759')

build() {
  cd $pkgname-$pkgver
  ./configure --prefix=/usr
  make
}

package() {
  cd $pkgname-$pkgver
  make DESTDIR=$pkgdir install
}
